[global]
	monitor = 0
	follow = mouse
	geometry = "400x100-32+32"
	indicate_hidden = yes
	shrink = yes
	transparency = 0
	separator_height = 0
	padding = 30
	horizontal_padding = 30
	frame_width = 0
	frame_color = "#9a9fa0"
	separator_color = "#20242d"
	sort = no
	idle_threshold = 120
	font = Rubik 10
	line_height = 6
	notification_height = 1
	markup = full
	format = "<b>%s</b>\n%b"
	alignment = left
	show_age_threshold = 60
	word_wrap = yes
	ignore_newline = no
	stack_duplicates = false
	hide_duplicate_count = yes
	show_indicators = yes
	icon_position = left
	max_icon_size= 80
	sticky_history = no
	history_length = 6
	browser = firefox
	always_run_script = true
	title = Dunst
	class = Dunst
	corner_radius = 0 

	mouse_left_click = close_current
	mouse_middle_click = do_action
	mouse_right_click = close_all

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#f5f5f5"
    foreground = "#282828"
    timeout = 10
    # Icon for notifications with low urgency, uncomment to enable
    #icon = /path/to/icon

[urgency_normal]
  background = "#f5f5f5"
  foreground = "#282828"
    timeout = 10
    # Icon for notifications with normal urgency, uncomment to enable
    #icon = /path/to/icon

[urgency_critical]
    frame_color = "#f5f5f5"
    background = "#f5f5f5"
    foreground = "#282828"
    timeout = 0
    # Icon for notifications with critical urgency, uncomment to enable
    #icon = /path/to/icon

    [log_notifs]
        script = /usr/bin/dunst_logger.sh

