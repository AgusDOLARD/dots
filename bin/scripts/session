#!/bin/sh

sessionsDir="/tmp/sessions"

[ ! -d "$sessionsDir" ] && mkdir -p "$sessionsDir"

for session in "$sessionsDir"/*; do
	[ -e "$session" ] || continue
	bn="$(basename "$session")"
	set -- "$@" "$bn"
done

sel="$(echo "$@" | sed "s/\s/\n/" | dmenu -p sessions)"

ABDUCO_CMD=zsh abduco -A "$sessionsDir/$sel"
